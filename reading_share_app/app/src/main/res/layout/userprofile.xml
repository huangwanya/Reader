<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >
 <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_gravity="center_vertical"
        android:background="#009966"
        android:orientation="horizontal"
        android:paddingLeft="3.0dip"
        android:paddingRight="3.0dip" >

     <ImageView
         android:id="@+id/top_back"
         android:layout_width="50px"
         android:layout_height="50px"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:src="@drawable/icon_back_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="个人档案"
            android:textColor="#ffffffff"
            android:textSize="36px"
            android:textStyle="bold" />

     <ImageView
         android:id="@+id/add_new_xd"
         android:layout_width="80px"
         android:layout_height="80px"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:src="@drawable/save" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
            android:orientation="vertical" 
        android:padding="10dp" >
            
   
            

            
            
            
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="用 户 名："
            android:visibility="gone"
            android:textColor="#333333"
            android:textSize="32px" />

        <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
               
            android:hint="输入用户名"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="32px" />
    </LinearLayout>
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:text="用户密码："
            android:textColor="#333333"
            android:textSize="32px" />

        <EditText
            android:id="@+id/userpasswords"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
               
            android:hint="输入密码"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#333333"
                    android:inputType="textPassword"
            android:textSize="32px" />
    </LinearLayout>
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="确认密码："
            android:visibility="gone"
            android:textColor="#333333"
            android:textSize="32px" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
               
            android:hint="输入确认密码"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#333333"
                    android:inputType="textPassword"
            android:textSize="32px" />
    </LinearLayout>
                  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:text="姓         名："
            android:textColor="#333333"
            android:textSize="32px" />

        <EditText
            android:id="@+id/editQQ"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
               
            android:hint="输入姓名"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="32px" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="年         级："
                android:textColor="#333333"
                android:textSize="32px" />

            <Spinner
                android:id="@+id/editage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
android:entries="@array/nianji"
                android:hint="输入年龄"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="32px" />
        </LinearLayout>
                                    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:text="电          话："
            android:textColor="#333333"
            android:textSize="32px" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
               
            android:hint="输入电话"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="32px" />
    </LinearLayout>
    
                                                                        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:text="角         色："
            android:textColor="#333333"
            android:textSize="32px" />

        <Spinner
            android:id="@+id/editName123"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/languages"
            android:layout_gravity="center_vertical"
               
            android:hint=""
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="32px" />
    </LinearLayout>
    

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#fff"
                android:layout_marginTop="50dp"
                android:background="@drawable/dianji"
                android:text="保\t\t存"
                android:textSize="32px" />

            <RelativeLayout
                android:id="@+id/rr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register"
                android:visibility="gone"
                android:layout_marginBottom="50dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:text="已有帐号，" />

                <TextView
                    android:id="@+id/userlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="点击此处登录"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/userlogin"
                    android:layout_alignRight="@+id/userlogin"
                    android:layout_below="@+id/userlogin"
                    android:background="#333333" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>